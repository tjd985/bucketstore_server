{
  "compilerOptions": {
    "types": ["node"],
    "target": "ESNext",
    "allowJs": true,
    "noEmit": true,
    "module": "CommonJS",
    "preserveValueImports": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
